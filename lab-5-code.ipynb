    "name = input(\"What is your name?\")\n",
    "day = int(input(\"What day of the week is it (monday being 1)?\"))\n",
    "if (day < 6):\n",
    "    days_until_weekend = 6-day\n",
    "    print(days_until_weekend, \"days until the weekend, \" + name + \"!\")\n",
    "else:\n",
    "    print(\"It is already the weekend, \" + name + \"!\")\n"
